{
  "name": "set-head",
  "displayName": "SetHead",
  "version": "0.1.3",
  "description": "A simple tool used to modify HTTP requests and responses.",
  "author": "Nicolas Vitaterna <nvitaterna@gmail.com>",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "format": "prettier --write src",
    "lint": "eslint src --fix",
    "release": "commit-and-tag-version --no-verify",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --coverage.reporter=text",
    "typecheck": "tsc --noEmit",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox",
    "zip:edge": "wxt zip -b edge",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare && lefthook install"
  },
  "dependencies": {
    "@mantine/core": "^8.3.9",
    "@mantine/hooks": "^8.3.9",
    "@tabler/icons-react": "^3.35.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "short-uuid": "^6.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.14",
    "@wxt-dev/module-react": "^1.1.5",
    "autoprefixer": "^10.4.22",
    "commit-and-tag-version": "^12.6.0",
    "eslint": "9.x",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-testing-library": "^7.13.5",
    "jsdom": "^27.2.0",
    "lefthook": "^2.0.4",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.7.3",
    "sass": "^1.94.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14",
    "wxt": "^0.20.11"
  },
  "commit-and-tag-version": {
    "scripts": {
      "prerelease": "pnpm test && pnpm build"
    }
  }
}
